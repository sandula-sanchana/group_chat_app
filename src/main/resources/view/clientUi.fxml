<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="591.0" prefWidth="400" style="-fx-background-color: #222; -fx-background-radius: 15;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.ijse.group_chatapp.controller.ClientUiController">
    <VBox alignment="CENTER" prefHeight="486.0" prefWidth="380.0" spacing="10" AnchorPane.bottomAnchor="4.0" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <Label alignment="TOP_LEFT" contentDisplay="TOP" style="-fx-text-fill: white; -fx-font-size: 18px;" text="Client Chat" />
        <TextArea fx:id="chatArea" editable="false" prefHeight="350" style="-fx-background-color: #e0e0e0;" wrapText="true">
         <font>
            <Font size="19.0" />
         </font></TextArea>
        <HBox spacing="10">
            <TextField fx:id="messageField" prefHeight="36.0" prefWidth="268.0" promptText="Type message..." style="-fx-background-color: #90caf9;" HBox.hgrow="ALWAYS">
            <font>
               <Font name="Cousine Bold" size="18.0" />
            </font></TextField>
         <Button mnemonicParsing="false" onAction="#selectImage" prefHeight="38.0" prefWidth="26.0" text="+" />
            <Button onAction="#onSend" prefHeight="37.0" prefWidth="92.0" style="-fx-background-color: teal;" text="Send" />
        </HBox>
      <ImageView fx:id="imageV" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <Button onAction="#onSendImage" prefHeight="37.0" prefWidth="92.0" style="-fx-background-color: teal;" text="Send image" />
    </VBox>
</AnchorPane>
